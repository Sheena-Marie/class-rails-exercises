<p id="notice"><%= notice %></p>

<h1>Listing Shelters</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Name</th>
      <th>Description</th>
      <th>Street</th>
      <th>Suburb</th>
      <th>State</th>
      <th>Postcode</th>
      <th>Country</th>
      <th>Latitude</th>
      <th>Longitude</th>
      <th>Website</th>
      <th>Phone</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @shelters.each do |shelter| %>
      <tr>
        <td><%= shelter.user %></td>
        <td><%= shelter.name %></td>
        <td><%= shelter.description %></td>
        <td><%= shelter.street %></td>
        <td><%= shelter.suburb %></td>
        <td><%= shelter.state %></td>
        <td><%= shelter.postcode %></td>
        <td><%= shelter.country %></td>
        <td><%= shelter.latitude %></td>
        <td><%= shelter.longitude %></td>
        <td><%= shelter.website %></td>
        <td><%= shelter.phone %></td>
        <td><%= link_to 'Show', shelter %></td>
        <td><%= link_to 'Edit', edit_shelter_path(shelter) %></td>
        <td><%= link_to 'Destroy', shelter, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

