<h1>Listing Shelter Types</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @shelter_types.each do |shelter_type| %>
      <tr>
        <td><%= shelter_type.name %></td>
        <td><%= shelter_type.description %></td>
        <td><%= link_to 'Show', shelter_type %></td>
        <td><%= link_to 'Edit', edit_shelter_type_path(shelter_type) %></td>
        <td><%= link_to 'Destroy', shelter_type, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

